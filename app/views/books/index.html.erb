<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= form_for :search, url: books_path, method: :get do |f| %>
  <%= f.text_field :title %>
  <%= f.submit "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year published</th>
      <th>Isbn</th>
      <th>Price</th>
      <th>Out of print</th>
      <th>Views</th>
      <th>Supplier</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.year_published %></td>
        <td><%= book.isbn %></td>
        <td><%= book.price %></td>
        <td><%= book.out_of_print %></td>
        <td><%= book.views %></td>
        <td><%= book.supplier_id %></td>
        <td><%= book.author_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
